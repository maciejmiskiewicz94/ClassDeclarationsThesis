@using ClassDeclarationsThsesis.Models
@using Microsoft.AspNet.Identity
@model List<User>
@{
    ViewBag.Title = "My Marks";
}
<div>
    <h4>Account information</h4>
    <hr/>
    <dl class="dl-horizontal">
        @foreach (var student in Model)
        {
            if (student.email.Replace(" ",String.Empty) == HttpContext.Current.User.Identity.Name)
            {
                <dl class="dl-horizontal">
                    <dt>Name</dt>
                    <dd>@student.name</dd>
                    <dd></dd>
                    <dt>Surname</dt>
                    <dd>@student.surname</dd>
                    <dt>Email</dt>
                    <dd>
                        @HttpContext.Current.User.Identity.Name
                    </dd>
                </dl>
            }
        }
       
    </dl>
</div>
<div>
    <h4>Marks</h4>
    <table border="1", width="300">
        <tr>
            <th>Task name</th>
            <th>Points</th>
        </tr>
        <tr>
            <th>A1</th>
            <th>2</th>
        </tr>
        <tr>
            <th>A2</th>
            <th>0</th>
        </tr>
        <tr>
            <th>A3</th>
            <th>10</th>
        </tr>
    </table>
</div>


